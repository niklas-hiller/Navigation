<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation.App.Views.InsightPage"
             xmlns:components="clr-namespace:Navigation.App.Views.Components"
             Title="Insight">
    <ScrollView>
        <VerticalStackLayout Margin="5" 
                             Spacing="6">
            <Frame>
                <Button Text="Export" Clicked="Button_OnClicked"/>
            </Frame>
            <Frame>
                <components:AccelerometerGraph Title="Accelerometer"/>
            </Frame>
            <Frame>
                <components:GyroscopeGraph Title="Gyroscope"/>
            </Frame>
            <Frame>
                <components:MagnetometerGraph Title="Magnetometer"/>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>